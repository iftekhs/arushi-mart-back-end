        {
            "name": "Products API (products)",
            "item": [
                {
                    "name": "List Products (index)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{api}}/products?include=categories,images&filter[active]=true&filter[search]=shirt&sort=-price&page[number]=2&page[size]=10",
                            "host": ["{{api}}"],
                            "path": ["products"],
                            "query": [
                                {
                                    "key": "include",
                                    "value": "categories,images",
                                    "description": "Allowed: categories, tags, variants, images, variants.color, variants.size, images.color",
                                    "disabled": false
                                },
                                {
                                    "key": "filter[active]",
                                    "value": "true",
                                    "description": "Filter by active status (true/false)",
                                    "disabled": false
                                },
                                {
                                    "key": "filter[search]",
                                    "value": "shirt",
                                    "description": "Filter by name, description, or sku",
                                    "disabled": false
                                },
                                {
                                    "key": "filter[price_min]",
                                    "value": "10.00",
                                    "description": "Filter by minimum price",
                                    "disabled": true
                                },
                                {
                                    "key": "filter[price_max]",
                                    "value": "50.00",
                                    "description": "Filter by maximum price",
                                    "disabled": true
                                },
                                {
                                    "key": "filter[category]",
                                    "value": "1",
                                    "description": "Filter by category ID",
                                    "disabled": true
                                },
                                {
                                    "key": "filter[tag]",
                                    "value": "5",
                                    "description": "Filter by tag ID",
                                    "disabled": true
                                },
                                {
                                    "key": "sort",
                                    "value": "-price",
                                    "description": "Sort by field (e.g., 'price' for ASC, '-price' for DESC). Allowed: name, price, created_at, updated_at, sku",
                                    "disabled": false
                                },
                                {
                                    "key": "page[number]",
                                    "value": "2",
                                    "description": "Page number for pagination",
                                    "disabled": false
                                },
                                {
                                    "key": "page[size]",
                                    "value": "10",
                                    "description": "Items per page (max 100)",
                                    "disabled": false
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Show Single Product (show)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{api}}/products/{{product_id}}?include=variants.color",
                            "host": ["{{api}}"],
                            "path": ["products", "{{product_id}}"],
                            "query": [
                                {
                                    "key": "include",
                                    "value": "variants.color",
                                    "description": "Allowed: categories, tags, variants, images, variants.color, variants.size, images.color",
                                    "disabled": false
                                }
                            ]
                        }
                    },
                    "response": []
